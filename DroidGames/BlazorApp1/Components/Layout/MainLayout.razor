@inherits LayoutComponentBase

<div class="page-wrapper">
    <!-- Header -->
    <header class="main-header">
        <div class="header-container">
            <div class="header-logo">
                <a href="/">
                    <img src="/graphic/DroidGames_logo_barva_v1.png" alt="Droid Games 2026" height="50" />
                </a>
            </div>
            <h1 class="header-title">Droid Games 2026</h1>
            <div class="header-actions">
                <!-- User info bude přidáno později -->
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <aside class="sidebar">
            <NavMenu />
        </aside>
        
        <main class="content-area">
            @Body
        </main>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-container">
            <p>&copy; 2026 Centrum Robotiky Plzeň | Droid Games</p>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" class="blazor-error">
    <span class="material-symbols-outlined">error</span>
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">✕</a>
</div>

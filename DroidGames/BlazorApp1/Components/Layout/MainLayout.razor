@using BlazorApp1.Components.Shared
@inherits LayoutComponentBase

<div class="page-wrapper">
    <!-- Top Navigation Header -->
    <header class="top-header">
        <div class="header-content">
            <!-- Logo area with white background -->
            <div class="logo-area">
                <a href="/">
                    <img src="/graphic/DroidGames_logo_barva_v1.png" alt="Droid Games 2026" />
                </a>
            </div>
            
            <!-- Navigation Menu -->
            <nav class="top-nav">
                <NavMenu />
            </nav>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="main-content">
        <div class="content-wrapper">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-container">
            <p>&copy; 2026 Centrum Robotiky Plzeò | Droid Games</p>
        </div>
    </footer>
    
    <!-- Notification Display -->
    <NotificationDisplay />
</div>

<div id="blazor-error-ui" class="blazor-error">
    <span class="material-symbols-outlined">error</span>
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">?</a>
</div>

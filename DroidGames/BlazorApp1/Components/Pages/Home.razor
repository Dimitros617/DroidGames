@page "/"
@inject BlazorApp1.Services.ITeamService TeamService
@rendermode InteractiveServer

<PageTitle>DROID GAMES 2026</PageTitle>

<div style="padding: 40px; background: #1a1a1a; min-height: 100vh; color: white;">
    <h1 style="color: #00d4ff; margin-bottom: 20px;">🤖 DROID GAMES 2026 - Test s inject</h1>
    <h2 style="color: lime;">Načítá se... ✅</h2>
    
    <button style="background: #ff6600; color: white; padding: 15px 30px; border: none; border-radius: 8px; margin: 20px 0; cursor: pointer;" @onclick="LoadData">
        Načíst týmy
    </button>
    
    <p style="color: yellow;">Status: @_status</p>
</div>

@code {
    private string _status = "Připraveno";

    private async Task LoadData()
    {
        try
        {
            _status = "Načítám...";
            var teams = await TeamService.GetLeaderboardAsync();
            _status = $"Načteno {teams.Count} týmů!";
        }
        catch (Exception ex)
        {
            _status = $"Chyba: {ex.Message}";
        }
    }
}

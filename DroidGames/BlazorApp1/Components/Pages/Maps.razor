@page "/maps"

<PageTitle>Mapy - DROID GAMES 2026</PageTitle>

<div class="maps-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">map</span>
            Herní mapy
        </h1>
        <p class="subtitle">Prohlédněte si všechny mapy soutěže</p>
    </div>

    <div class="maps-grid">
        <div class="map-card">
            <div class="map-icon">
                <span class="material-symbols-outlined">terrain</span>
            </div>
            <h3>Základní mapa</h3>
            <p>Klasická mapa pro zahřátí</p>
            <span class="map-difficulty easy">Snadná</span>
        </div>

        <div class="map-card">
            <div class="map-icon">
                <span class="material-symbols-outlined">landscape</span>
            </div>
            <h3>Střední mapa</h3>
            <p>Mapa s většími výzvami</p>
            <span class="map-difficulty medium">Střední</span>
        </div>

        <div class="map-card">
            <div class="map-icon">
                <span class="material-symbols-outlined">hiking</span>
            </div>
            <h3>Pokročilá mapa</h3>
            <p>Mapa pro zkušené týmy</p>
            <span class="map-difficulty hard">Náročná</span>
        </div>
    </div>
</div>

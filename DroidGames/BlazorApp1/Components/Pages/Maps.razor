        <p class="page-subtitle">
            Konfigurace hern√≠ch pl√°n≈Ø pro jednotliv√° kola
        </p>
    </div>

    @if (_isLoading)
    {
        <!-- Loading skeleton -->
        <div class="loading-grid">
            <div class="skeleton-map-card"></div>
            <div class="skeleton-map-card"></div>
            <div class="skeleton-map-card"></div>
        </div>
    }
    else if (_error != null)
    {
